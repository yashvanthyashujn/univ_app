<% if @student.errors.any? %>
  <div class="container">
     <div class="row sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel red lighten-2"><
                <span class="white_text">

                 <strong><%= pluralize(@student.errors.count, "error") %></strong>
                     prohibited your profile from being created
                    <ul>
                      <% @student.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                     <% end %>
                    </ul>
                   
                </span> 
            </div>
        </div>
    </div>
</div>
<% end %>

   <div class="container">
      <div class="row center sign-up-form ">
             <div class="col s12 m12 l12">
                 <div class="card-panel">
                  <h3 class="header">Edit your profile</h3>
                  <div class="row">
                   <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                     <div class="row">
                    <div class="input-field col s12">
                    <%= f.text_field :name, placeholder:" Enter your full name", autofocus: true %>  
                        <%= f.label :name , class: "active"%> 
                               </div>
                                 </div>
                            <div class="row">
                                <div class="input-field col s12">
                                <%= f.text_field :email, placeholder:" Enter your Email address", autofocus: true %> 
                                <%= f.label :email , class: "active"%>  
                                </div>
                            </div>
                            <div class="row">
                              <div class="input-field col s12">     
                               <%= f.button "submit changes" '<i class="material-icons right">keyboard_arrow_right</i>'.html_safe, class: "btn green waves-effect waves-light right" %>  
                               </div>
                            </div>  
                        <% end %>
                      </div>
                </div>
            </div>
        </div> 
    </div>